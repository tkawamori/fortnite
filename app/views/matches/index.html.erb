<header class="masthead">
    <div class="container">
        <div class="intro-text">
            <h2 class="intro-lead-in h2">SNSでカンタン募集しよう！</h2>
            <div class="intro-button">
                <%= link_to '今すぐ始める', new_match_path , class: "btn btn-xl" %>
            </div>
        </div>
    </div>
</header>
<div class="container">
    <div class="row">
        <div class="col-md-6 offset-md-1">
            <div class="match-show-left">
                <h2 class="match-list-title"><%= current_user.email %>さんの募集一覧</h2>
                <ul class="list-group">
                    <% @matches.each do |match| %><!-- ①： マッチ一覧の表示 -->
                        <%= link_to match_path(match), class: "no-text-decoration" do %>
                            <li class="list-group">
                                <div class="card">
                                    <img class="card-img-bottom" src="/<%= match.image_url %>" alt="">
                                    <div class="card-body">
                                        <h5 class="card-title"><%= match.title %></h5>
                                        <p class="card-text"><%= match.content %></p>
                                        <p class="card-text"><small class="text-muted"><%= match.created_at.strftime('%Y/%m/%d %H:%M') %></small></p>
                                    </div>
                                </div>
                            </li>
                        <% end %>
                    <% end %>
                </ul>
            </div>
        </div>
        <div class="col-md-4 ">
            <div class="match-show-left">
                <h2 class="entry-list-title">新着応募</h2>
                <ul class="list-group">
                        <% @entries.each do |entry| %>
                                <% if entry.match.user_id == current_user.id %><!-- ②：自分の作成した募集へのエントリーの場合 -->
                                    <li class="list-group-item">
                                        <div><%= entry.match.user.email %>　<small class="text-muted"><%= entry.match.created_at.strftime('%Y/%m/%d %H:%M') %></small></div>
                                        <div class="list-group-item-comment">
                                            <%= entry.messages %>
                                        </div>
                                    </li>
                                <% end %>
                        <% end %>
                </ul>
            </div>
        </div>
    </div>
</div>
